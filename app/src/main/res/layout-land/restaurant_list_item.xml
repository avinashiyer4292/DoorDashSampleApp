<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView android:id="@+id/restaurant_image"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginStart="35dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentStart="true" android:layout_alignParentBottom="true"/>

        <RelativeLayout android:layout_width="447dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true">
            <TextView android:id="@+id/restaurant_name"
                      android:layout_width="292dp"
                      android:layout_height="53dp"
                      android:text="Restaurant Name"
                      android:textColor="@color/black"
                      android:textSize="20sp"
                      android:layout_alignParentTop="true"
                      android:layout_marginTop="11dp"
                      android:layout_alignStart="@+id/restaurant_description"/>

            <TextView android:id="@+id/restaurant_description"
                      android:layout_width="322dp"
                      android:layout_height="wrap_content"
                      android:text="Restaurant Description"
                      android:textColor="@color/grey"
                      android:textSize="17sp"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:singleLine="true"
                      android:layout_alignBottom="@+id/restaurant_status"
                      android:layout_toStartOf="@+id/restaurant_status"/>

            <TextView android:id="@+id/restaurant_status"
                      android:layout_width="96dp"
                      android:layout_height="91dp"
                      android:text="20 mins"
                      android:textColor="@color/grey"
                      android:textSize="17sp"
                      android:layout_alignParentEnd="true"
                      android:layout_marginEnd="15dp"
                      android:ellipsize="end"
                      android:maxLines="2"
                      android:layout_alignTop="@+id/restaurant_name"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>